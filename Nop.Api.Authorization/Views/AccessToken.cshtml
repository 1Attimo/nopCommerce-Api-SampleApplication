@using Nop.Api.Authorization.Models

@model AccessModel

@{
    Layout = "Layout.cshtml";
}

<div>
    <h2>Access Data</h2>
    @using (Html.BeginRouteForm("Submit", FormMethod.Post))
    {
        <table>
            <tr>
                <td>
                    <label for="serverUrl">Server url</label>
                </td>
                <td>
                    <input name="serverUrl" type="text" id="serverUrl" value="@Model.UserAccessModel.ServerUrl"/>
                </td>
            </tr>
            <tr>
                <td>
                    <label for="clientId">Client Id</label>
                </td>
                <td>
                    <input name="clientId" type="text" id="clientId" value="@Model.UserAccessModel.ClientId"/>
                </td>
            </tr>
            <tr>
                <td>
                    <label for="clientSecret">Client Secret</label>
                </td>
                <td>
                    <input name="clientSecret" type="text" id="clientSecret" value="@Model.UserAccessModel.ClientSecret"/>
                </td>
            </tr>
            <tr>
                <td>
                    <label for="redirectUrl">Redirect Url</label>
                </td>
                <td>
                    <input name="redirectUrl" type="text" id="redirectUrl" value="@Url.RouteUrl("GetAccessToken", null, Request.Url.Scheme)" readonly="readonly" value="@Model.UserAccessModel.RedirectUrl"/>
                </td>
            </tr>
            <tr>
                <td>
                    <input type="submit" value="Get Access Token"/>
                </td>
            </tr>
        </table>
    }
</div>
<div>
    <h2>Authorization Data</h2>
    <div>
        <h4>Access Token</h4>
        <p>@Model.AuthorizationModel.AccessToken</p>
    </div>
    <div>
        <h4>Refresh Token</h4>
        <p>@Model.AuthorizationModel.RefreshToken</p>
    </div>
    <div>
        <h4>Access Token Expires In Seconds</h4>
        <p>@Model.AuthorizationModel.ExpiresIn</p>
    </div>
    <div>
        <h4>Token Type</h4>
        <p>@Model.AuthorizationModel.TokenType</p>
    </div>
</div>